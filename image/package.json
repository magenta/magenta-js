{
    "name": "@magenta/image",
    "version": "0.1.2",
    "description": "Visual art with machine learning, in the browser.",
    "main": "es5/index.js",
    "types": "es5/index.d.ts",
    "jsdelivr": "dist/magentaimage.js",
    "unpkg": "dist/magentaimage.js",
    "dependencies": {
        "@tensorflow/tfjs": "^0.13.3"
    },
    "devDependencies": {
        "browserify": "^14.4.0",
        "clang-format": "^1.2.3",
        "http-server": "^0.11.1",
        "ts-node": "^5.0.1",
        "tsify": "^3.0.4",
        "tslint": "^5.9.1",
        "typedoc": "^0.13.0",
        "typedoc-plugin-sourcefile-url": "^1.0.3",
        "typescript": "^2.7.2"
    },
    "scripts": {
        "prepublish": "yarn lint && yarn build && yarn bundle",
        "build": "tsc",
        "bundle": "browserify --standalone mi src/index.ts -p [tsify] > dist/magentaimage.js",
        "lint": "tslint -c ../tslint.json -p . -t verbose",
        "build-demos": "cd demos && ./build-demos.sh",
        "run-demos": "yarn build-demos && http-server demos/",
        "publish-demos": "yarn build-demos && mkdir -p ../docs/image/demos && cp demos/*.{js,html,css,jpg} ../docs/image/demos",
        "doc": "typedoc --sourcefile-url-prefix 'https://github.com/tensorflow/magenta-js/tree/master/image/src/arbitrary_stylization/' --out ../docs/image src --mode file --excludePrivate --exclude '**/*+(index|test).ts' --excludeExternals && yarn publish-demos"
    },
    "author": "Magenta",
    "license": "Apache-2.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/tensorflow/magenta-js.git"
    }
}
